{
  "name": "boilerplate-nodejs-ts",
  "version": "0.0.1",
  "description": "Api Base",
  "main": "server/main.js",
  "readme": "README.md",
  "author": {
    "name": "Jean Peixoto",
    "email": "jeanpeixotov@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "scripts": {
    "dev": "yarn compile && concurrently -r \"yarn watch:server\" \"yarn watch:templates\" \"yarn nodemon\"",
    "compile": "yarn compile:templates && yarn compile:migrations && yarn compile:server",
    "compile:templates": "yarn copyfiles -f ./src/server/services/mail/templates/*.pug ./bin/server/services/mail/templates/",
    "compile:server": "yarn tsc",
    "compile:migrations": "yarn tsc -p tsconfig.db.json",
    "watch:templates": "yarn watch \"yarn compile:templates\" ./src/server/services/mail/templates",
    "watch:server": "yarn tsc -w --preserveWatchOutput",
    "pretest": "yarn compile",
    "test": "cross-env NODE_ENV=test mocha 'bin/**/*.spec.js' --reporter spec --timeout 3000 --exit",
    "pretest:watch": "yarn compile",
    "test:watch": "cross-env NODE_ENV=test ts-mocha 'src/**/*.spec.ts' --bail --watch --watch-extensions=ts --reporter spec --timeout 3000",
    "migrate": "yarn knex migrate:latest && yarn knex seed:run",
    "docker:release": "yarn docker:build && yarn docker:push",
    "docker:build": "docker build -t project/api-base -f docker/prod/Dockerfile .",
    "docker:push": "docker push project/api-base"
  },
  "husky": {
    "hooks": {
      "pre-commit": "concurrently -r \"yarn tslint -p tsconfig.json\" \"yarn tsc --noEmit\"",
      "post-merge": "yarn"
    }
  },
  "license": "ISC",
